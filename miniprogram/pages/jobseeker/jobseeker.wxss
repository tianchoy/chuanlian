/* pages/recruiter/recruiter.wxss */
.container {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #fff;
  }

  /* 居中容器 */
.empty-container {
    flex: 1; /* 占据剩余空间 */
    display: flex;
    justify-content: center; /* 水平居中 */
    align-items: center; /* 垂直居中 */
}

/* 暂无更多数据样式 */
.empty-text {
    flex:1;
    color: #999;
    font-size: 14px;
}
  .jobList-content{
      width: 100%;
  }
  /* 顶部选项卡样式 */
  .tabs {
    white-space: nowrap; /* 禁止换行 */
    background-color: #f8f8f8;
    padding: 10px 0;
  }
  
  .tab {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    color: #333;
  }
  
  .tab.active {
    color: #007bff;
    border-bottom: 2px solid #007bff;
  }
  
  /* 内容区域样式 */
  .content {
    flex: 1;
    width: 100%;
    background-color: #fff;
  }
  .list-item {
    padding: 12px;
    margin-bottom: 10px;
    background: #fff;
    border-bottom: 1rpx solid #f6f6f6;
}

.item-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
    font-weight: bold;
}

.item-content {
    display: flex;
    justify-content: space-between;
    margin-bottom: 6px;
    font-size: 13px;
    color: #666;
}

.item-footer {
    font-size: 12px;
    color: #999;
}

.browse-badge {
    display: inline-flex;
    align-items: center;
    background-color: #f0f9eb;
    color: #67c23a;
    padding: 2px 6px;
    border-radius: 10px;
    font-size: 12px;
}

.browse-badge icon {
    margin-right: 3px;
}
/* 加载更多底部区域样式 */
.load-more-footer {
    padding: 15px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #999;
    font-size: 14px;
}

.no-more {
    text-align: center;
    padding: 15px 0;
    color: #999;
    font-size: 12px;
}

.loading-more {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 0;
    color: #999;
    font-size: 12px;
}
.swiper-item {
    overflow: hidden;
}

.job-list {
    min-height: 101%; /* 确保能触发滚动 */
}

scroll-view {
    overflow-y: auto;
    -webkit-overflow-scrolling: touch; /* iOS流畅滚动 */
}