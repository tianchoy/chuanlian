<view class="container">
    <view class="list-box">
        <view class="list-item" wx:for="{{jobLists[0]}}" wx:key="index">
            <view wx:for="{{item}}" wx:key="title">
                <view class="title-box">
                    <view class="title">
                        {{item.title}}
                        <text class="status  status-{{item.status}}">{{status[item.status]}}</text>
                    </view>
                    <view class="tools">
                        <text class="upState" bind:tap="changeJobStatus" data-type="up" data-id="{{item.id}}">上线</text>
                        <text class="downState"  bind:tap="changeJobStatus" data-type="down" data-id="{{item.id}}">下线</text>
                    </view>
                </view>
                <view class="item">
                    <text>工资:{{item.salary}}{{item.totalSalary}}元 </text>
                    <text> 路线:{{item.route}} </text>
                    <text> 日期:{{item.date}}</text>
                </view>
            </view>
        </view>
        <view class="list-item" wx:for="{{jobLists[1]}}" wx:key="index">
            <view wx:for="{{item}}" wx:key="title">
                <view class="title-box">
                    <view class="title">
                        {{item.title}}
                        <text class="status  status-{{item.rusumesStatus}}">{{status[item.rusumesStatus]}}</text>
                    </view>
                    <view class="tools">
                        <text class="upState">上线</text>
                        <text class="downState">下线</text>
                    </view>
                </view>
                <view class="item">
                    <text>工资:{{item.salary}}{{item.totalSalary}}元 </text>
                    <text> 性别:{{item.selectedGender}} </text>
                    <text> 年龄:{{item.age}}</text>
                </view>
            </view>
        </view>
    </view>
    <!--  未登陆的情况下，展示  -->
    <isLogin isLogin="{{!isLogin}}" bind:toLogin="toLogin" />
    <!--  已登陆的情况下，展示发布button  -->
    <view class="button-container" wx:if="{{isLogin}}">
        <view class="custom-btn" bind:tap="publish" data-type="publishJobPost">发布招聘</view>
        <view class="custom-btn" bind:tap="publish" data-type="publishJobSeeking">发布求职</view>
    </view>
</view>