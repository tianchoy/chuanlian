.container {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #fff;
}
.list-box{
    width: 100%;
}
.list-item{
    padding: 10rpx 20rpx;
}
/* 内容区域样式 */
.content {
    flex: 1;
    width: 100%;
    background-color: #fff;
}

.button-container {
    position: fixed;
    bottom: 50rpx;
    display: flex;
    justify-content: space-between;
    width: 100%;
}

.custom-btn {
    margin: 0 50rpx;
    padding: 15rpx 20rpx;
    background-color: #007bff;
    color: white;
    border-radius: 10rpx;
    font-size: 32rpx;
}