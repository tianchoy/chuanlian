/* pages/publishJobSeeking/publishJobSeeking.wxss */
.container {
    padding: 20px;
    background-color: #fff;
}

.section {
    width: 100%;
    margin-bottom: 20px;
}

.title {
    width: 100%;
    font-weight: bolder;
    margin-bottom: 20rpx;
    font-size: 35rpx;
}

.section-title {
    width: 100%;
    display: inline-block;
    font-weight: bold;
    margin-bottom: 20px;
}

.input {
    width: 39%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    text-align: center;
}

.single {
    width: 100%;
}

.picker-box {
    display: flex;
    justify-content: space-between;
}

.picker-item {
    width: 45%;
    text-align: center;
}

.picker {
    margin-bottom: 10px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.input-group {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.skill-box{
    display: flex;
}

textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 10px;
}

button {
    background-color: #007aff;
    color: white;
    padding: 10px;
    border-radius: 5px;
    text-align: center;
}