.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
  }
  
  /* 顶部选项卡样式 */
  .tabs {
    white-space: nowrap; /* 禁止换行 */
    background-color: #f8f8f8;
    padding: 10px 0;
  }
  
  .tab {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    color: #333;
  }
  
  .tab.active {
    color: #007bff;
    border-bottom: 2px solid #007bff;
  }
  
  /* 内容区域样式 */
  .content {
    flex: 1;
    width: 100%;
    background-color: #fff;
  }
  
  .item {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    font-size: 18px;
  }