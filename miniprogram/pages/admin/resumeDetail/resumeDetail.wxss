/* pages/admin/resumeDetail/resumeDetail.wxss */
page {
    height: 100%;
  }
.container {
    padding: 20px;
    background-color: #fff;
    height: 100%;
    box-sizing: border-box; 
}

.title {
    width: 100%;
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 20px;
}

.section {
    width: 100%;
    border-bottom: 1rpx solid #eee;
    padding-bottom: 20rpx;
    margin-bottom: 20px;
}

.section-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.content {
    font-size: 16px;
    text-align: center;
}
.content text{
    display: inline-block;
    margin: 0 50rpx;
}
.date{
    width: 100%;
    text-align: left;
    color: #ccc;
    margin-bottom: 10%;
    font-size: 24rpx;
}

button {
    margin-top: 20px;
    background-color: #007aff;
    color: white;
}
.tools{
    display: flex;
    justify-content: space-between;
    width: 100%;
}
.tools text {
    display: inline-block;
    color: white;
    margin: 0 20rpx;
    padding: 20rpx 30rpx;
    border-radius: 10rpx;
}
.tel{
    background-color: #007aff;
}
.accept{
    background-color:#179B16 ;
}
.reject{
    background-color: #F76260;
}