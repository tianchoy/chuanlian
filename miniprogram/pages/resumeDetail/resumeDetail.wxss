/* pages/resumeDetail/resumeDetail.wxss */
page {
    height: 100%;
  }
.container {
    padding: 20px;
    background-color: #fff;
    height: 100%;
    box-sizing: border-box; 
}

.title {
    width: 100%;
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 20px;
}

.section {
    width: 100%;
    border-bottom: 1rpx solid #eee;
    padding-bottom: 20rpx;
    margin-bottom: 20px;
}

.section-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.content {
    display: flex;
    justify-content: space-between;
    font-size: 16px;
    text-align: center;
}
.content text{
    display: inline-block;
}
.date{
    width: 100%;
    text-align: left;
    color: #ccc;
    margin-bottom: 10%;
    font-size: 24rpx;
}

button {
    margin-top: 20px;
    background-color: #007aff;
    color: white;
}