/* components/zhaopin/list-item/list-item.wxss */
.list-item {
    padding: 10px;
    width: 100%;
    border-bottom: 1px solid #eee;
}

.title {
    font-weight: bold;
    margin-bottom: 20rpx;
}

.content {
    display: flex;
    justify-content: space-between;
    color: #666;
    font-size: 28rpx;
}

.content text {
    display: inline-block;
    margin-right: 30rpx;
}