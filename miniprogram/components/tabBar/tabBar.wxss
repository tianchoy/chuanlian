.tab-bar {
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 150rpx;
    background-color: #fff;
    border-top: 1rpx solid #eee;
  }
  
  .tab-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  
  .tab-item.active {
    color: #07c160; /* 选中状态的颜色 */
  }
  
  .icon {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 8rpx;
  }