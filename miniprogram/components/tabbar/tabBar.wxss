/* components/tabbar/tabBar.wxss */
.tab-bar {
    display: flex;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 170rpx;
    background: #fff;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
    color: #999;
}

.tab-item.active {
    color: #179B16;
}

.tab-item image {
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 4rpx;
}

.badge {
    position: absolute;
    top: 8rpx;
    right: calc(50% - 20rpx);
    min-width: 36rpx;
    padding: 0 8rpx;
    background: #FF2D55;
    color: white;
    border-radius: 18rpx;
    font-size: 20rpx;
    text-align: center;
    line-height: 36rpx;
}